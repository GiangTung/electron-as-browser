{
  "name": "electron-as-browser",
  "productName": "Electron tutorial app",
  "version": "1.0.0",
  "description": "Make electron like browser easy and flexible.",
  "keywords": [
    "electron",
    "browser",
    "navigation",
    "tab",
    "addressbar"
  ],
    "main": "./example/main.js",
  "author": "eric",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  
  "files": [
    "./example/main.js",
    "index.js",
    "useConnect.js",
    "control.js",
    "./example/render/control.jsx",
    "./example/render/control.html",
    "./example/render/control-compiled.js",
    "./example/render/workspace.jsx",
    "./example/render/workspace-compiled.js",
    "./example/render/workspace.html",
    "babel.config.js",
    "./example/render/my-style.css",
    "./example/render/switcher.css",
    
    "./example/render/workspace-style.css"
  ],
  "build": {
    "appId": "yourappid",
    "target": "dmg",
    "dmg": {
      "background": "installer/mac/dmg-background.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 255,
          "y": 85,
          "type": "file"
        },
        {
          "x": 253,
          "y": 325,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": {
          "target": "appimage",
          "arch": ["armv7l"]
      }
  },
    "win": {
      
      "icon": "build/icon.ico"
    }
  },

  "scripts": {
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Tutorial App\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds",
    "docs": "documentation build *.js -f html -o docs",
    "start:control": "npx babel --watch example/renderer/control.jsx --out-file example/renderer/control-compiled.js",
    "start:workspace": "npx babel --watch example/renderer/workspace.jsx --out-file example/renderer/workspace-compiled.js",
    "start": "electron example/main.js",
    "dist": "build",
    "build": "electron-builder"
  },
  
  "dependencies": {
    "electron-builder": "^23.1.0",
    "smooth-scrollbar": "^8.7.4",
    "gsap" :"3.10.4",
    "use-effect-reducer":"0.7.0",
    "assert": "^2.0.0",
    "deep-assign": "^3.0.0",
    "electron-color-picker-eye-dropper-screen": "^1.0.10",
    "electron-eyedropper": "^0.1.7",
    "electron-json-storage": "^4.5.0",
    "electron-log": "^3.0.7",
    "events": "^3.3.0",
    "fs": "^0.0.1-security",
    "is-jpg": "^3.0.0",
    "is-png": "^3.0.1",
    "path": "^0.12.7",
    "pngparse": "^2.0.1",
    "puppeteer": "^15.0.1",
    "use-eye-dropper": "^1.3.5",
    "electron-builder-squirrel-windows": "^23.2.0",
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@electron-forge/maker-dmg": "^6.0.0-beta.64",
    "classnames": "^2.2.6",
    
    "electron-packager": "^15.5.1",
    "file-url": "^2.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "electron": "^16.0.7"
  }
}
